<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <Button
        android:id="@+id/reco"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.876"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        android:background="@drawable/imagepros"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/ic_ds0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/ic_ds1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:background="@drawable/catedge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.546">


        <EditText
            android:id="@+id/itemname"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/etedge"
            android:fontFamily="@font/esbuildmedium"
            android:gravity="center"
            android:hint="name"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15dp" />

        <Spinner
            android:id="@+id/catspin"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/itemname"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/spinedge"
            android:entries="@array/item"
            android:paddingStart="75dp" />

        <TextView
            android:id="@+id/itemamount"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/catspin"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/etedge"
            android:fontFamily="@font/esbuildmedium"
            android:gravity="center"
            android:hint="amount"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/btnincr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/catspin"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/plus" />

        <Button
            android:id="@+id/btndecr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/catspin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="81dp"
            android:background="@drawable/min" />

        <Button
            android:id="@+id/btnreset"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/itemamount"
            android:layout_alignParentStart="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/loop" />

        <EditText
            android:id="@+id/itemdesc"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btnreset"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-169dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/etedge"
            android:gravity="center"
            android:hint="desc"
            android:textSize="15dp"
            android:fontFamily="@font/esbuildmedium"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/itemamount" />

        <Button
            android:id="@+id/datasave"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="93dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/saveinput" />

        <Button
            android:id="@+id/addback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="250dp"
            android:background="@drawable/ic_back" />

        <Button
            android:id="@+id/code"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="208dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/barcode" />

        <TextView
            android:id="@+id/codename"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="57dp"
            android:fontFamily="@font/esbuildmedium"
            android:hint="barcode" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>